.ui.inverted.menu
  .ui.container
    .header.item Logbook
.ui.main.container
  = form_for @log, html: { class: 'ui form' } do |f|
    .field
      .ui.left.icon.input
        i.laptop.icon
        = f.text_field :time_in, autofocus: true, placeholder: "Time in", value: f.object.time_in.localtime.strftime('%H:%M %m/%d/%y')
    br
    .field
      .ui.left.icon.input
        i.laptop.icon
        = f.text_field :time_out, autofocus: true, placeholder: "Time out", value: f.object.time_out&.localtime&.strftime('%H:%M %m/%d/%y')
    br
    .actions
      = f.submit "OK", class: "ui teal submit button"
      = link_to 'Cancel', root_path, class: 'ui button'
